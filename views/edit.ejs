<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Update User</title>
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">	
</head>
<body>
    <div class="container" style="padding:3% 15%;">
		<h1 style="text-align: center;" > Enter the Details </h1>
		<form onsubmit="return validate();" action="/edituser/<%=id%>" method="post">
			<!-- <input type="hidden" name="id" value=""> -->
			<div class="form-group">
				<label for="exampleInputEmail1">Name</label>
	    		<input name="name" type="text" value="<%= user.name %>" placeholder="Enter Your Full Name" class="form-control" id="name" aria-describedby="emailHelp">
	    		<label id="namelabel" style="color:red; visibility: hidden;"></label>
			</div>
			<div class="form-group">
				<label for="exampleInputEmail1">Email</label>
	    		<input name="email" type="text" value="<%= user.email %>" placeholder="Enter Valid Email Address" class="form-control" id="email" aria-describedby="emailHelp">
	    		<label id="emaillabel" style="color:red; visibility: hidden;"></label>
			</div>
			<div class="form-group">
				<label for="exampleInputEmail1">Phone</label>
	    		<input name="phone" type="text" value="<%= user.phone %>" placeholder="Enter Your Phone Number" class="form-control" id="phone" aria-describedby="emailHelp">
	    		<label id="phonelabel" style="color:red; visibility: hidden;"></label>
			</div>
            <div class="form-group">
                <label for="exampleInputEmail1">Gender</label><br>
                <input type="gender" name="gender" value="<%= user.gender %>" id="exampleInputEmail1">
           </div>
		  	<button type="submit" name="update" style="margin-left: 40%; width:100px;" class="btn btn-primary">Update</button><br><br>
		</form>
	</div>
	<script type="text/javascript">
		function validate()
		{
			var uname = document.getElementById("name");
			var email = document.getElementById("email");
			var phone = document.getElementById("phone");
			var address = document.getElementById("address");
			if(uname.value.trim() == "")
			{
				uname.style.border = "solid 2px red";
				document.getElementById("namelabel").style.visibility = "visible";
				document.getElementById("namelabel").innerHTML = "Name cannot be empty!";
				return false;
			}
			else if(email.value.trim() == "")
			{
				email.style.border = "solid 2px red";
				document.getElementById("emaillabel").style.visibility = "visible";
				document.getElementById("emaillabel").innerHTML = "Email cannot be empty!";
				return false;
			}
			else if(phone.value.trim() == "")
			{
				phone.style.border = "solid 2px red";
				document.getElementById("phonelabel").style.visibility = "visible";
				document.getElementById("phonelabel").innerHTML = "Phone number cannot be empty!";
				return false;
			}
			else if(phone.value.trim().length < 8)
			{
				phone.style.border = "solid 2px red";
				document.getElementById("phonelabel").style.visibility = "visible";
				document.getElementById("phonelabel").innerHTML = "Enter valid phone number!";
				return false;
			}
			else
			{
				return true;
			}
		}
	</script>
</body>
</html>